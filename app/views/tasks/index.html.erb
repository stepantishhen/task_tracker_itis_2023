<h1>Tasks for <%= @project.name %></h1>

<%= link_to "NEW TASK", new_project_task_path(@project) %>

<div class="sort-links">
  <p class="link"> <%= link_to "Name", :sort => "name asc"%><p>
  <p class="link"> <%= link_to "Name reverse", :sort => "name desc"%><p>
  <p class="link"> <%= link_to "Created_at", :sort => "id asc"%><p>
  <p class="link"> <%= link_to "Created_at reverse", :sort => "id desc"%><p>
  <p class="link"> <%= link_to "Deadline", :sort => "deadline_at asc"%><p>
  <p class="link"> <%= link_to "deadline reverse", :sort => "deadline_at desc"%><p>
</div>

<% @tasks.each do |task| %>
  <div class="record">
    <p><%= task.id %>. <%= task.name %></p>
    <p><%= task.description %></p>
    <p><%= task.status %></p>
    <p><%= task.deadline_at %></p>
    <%= link_to "Show", url_for([@project, task]) %>
    <%= link_to "Edit", edit_project_task_path(@project, task) %>
    <%= link_to "Destroy", url_for([@project, task]), method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>

<p class="link"><%= paginate @tasks %></p>

<%= link_to "Back to Projects", projects_path %>
